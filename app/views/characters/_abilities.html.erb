<div>
  <strong>Abilities:</strong> <br>
  <table>
    <tr>
      <th> </th>
      <% character.abilities.each do |ability| %>
        <th><%= ability.name %></th>
      <% end %>
    </tr>
    <tr>
      <th><strong>Score:</strong></th>
      <% character.abilities.each do |ability| %>
        <td><%= ability.value %></td>
      <% end %>
    </tr>
    <tr>
      <th><strong>Race Bonus:</strong></th>
      <% character.abilities.each do |ability|%>
        <td><%= character.get_racial_bonus(ability)%></td>
      <% end %>
    </tr>
    <tr>
      <th><strong>Total:</strong></th>
      <% character.abilities.each do |ability| %>
        <td><%= character.ability_with_modifier(ability) %></td>
      <% end %>
    </tr>
    <tr>
      <th><strong>Modifier:</strong></th>
      <% character.abilities.each do |ability| %>
        <td><%= character.ability_modifier(ability) %></td>
      <% end %>
    </tr>
  </table>
</div>
